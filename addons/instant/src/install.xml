<modification>
    <name>#ocmod.space: <insertvar>MODCODE</insertvar></name>
    <code><insertvar>MODFILE</insertvar></code>
    <version><insertvar>MODVERS</insertvar></version>
    <author><insertvar>AUTHOR</insertvar></author>
    <link><insertvar>XMLLINK</insertvar></link>

    <file path="system/library/session/db.php">
        <operation error="log">
            <search>
                <![CDATA[$this->expire = (int)ini_get('session.gc_maxlifetime');]]>
            </search>
            <add position="after">
                <![CDATA[
        /// << Session Debloater
        if ($this->db) {
            // Remove entries older than gc_maxlifetime seconds + 1 day
            $this->gc((int)$this->expire + 86400);
        }
        /// >> Session Debloater]]>
            </add>
        </operation>

        <operation error="log">
            <search>
                <![CDATA[((int)time() + $expire)]]>
            </search>
            <add position="replace">
                <![CDATA["'" . date("Y-m-d H:i:s", (int)time() - $expire) . "'"]]>
            </add>
        </operation>

        <operation error="log">
            <search>
                <![CDATA[return false;]]>
            </search>
            <add position="replace">
                <![CDATA[return array();  /// >> Session Debloater]]>
            </add>
        </operation>
    </file>

    <file path="system/library/session/file.php">
        <operation error="log">
            <search>
                <![CDATA[$handle = fopen($file, 'r');]]>
            </search>
            <add position="before">
                <![CDATA[
            /// << Session Debloater
            $expire = (int)time() - (int)ini_get('session.gc_maxlifetime');

			if (filemtime($file) > $expire) {]]>
            </add>
        </operation>

        <operation error="log">
            <search>
                <![CDATA[return unserialize($data);]]>
            </search>
            <add position="after">
                <![CDATA[			}
            /// >> Session Debloater]]>
            </add>
        </operation>

        <operation error="log">
            <search>
                <![CDATA[unset($file);]]>
            </search>
            <add position="replace">
                <![CDATA[unlink($file);]]>
            </add>
        </operation>
    </file>
</modification>
